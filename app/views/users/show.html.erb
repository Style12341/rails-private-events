<div class="user-panel">
  <div class="events-created">
    <h2>Your events</h2>
    <div class="event-container">
      <% @user.events.each do |event| %>
        <div class="event-card">
          <%= render event %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="events-attended">
    <h2 style="text-align:center">Events</h2>
    <div class="event-container">
      <div class="future-events">
        <h2>To attend:</h2>
        <% @user.attended.upcoming.each do |event| %>
          <div class="event-card">
            <%= render event %>
          </div>
        <% end %>
      </div>
    </div>
    <hr>
    <div class="event-container">
      <div class="past-events">
        <h2>Attended:</h2>
        <% @user.attended.past.each do |event| %>
          <div class="event-card">
            <%= render event %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>